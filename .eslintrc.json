{
	"extends": [
	  "airbnb-base",
	  "airbnb-typescript/base",
	  "eslint:recommended",
	  "plugin:jest/recommended",
	  "plugin:@typescript-eslint/recommended",
	  "plugin:@typescript-eslint/recommended-requiring-type-checking",
	  "plugin:security/recommended",
	  "plugin:prettier/recommended"
	],
	"env": {
	  "node": true,
	  "es6": true,
	  "jest": true
	},
	"plugins": ["jest", "security"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
	  "ecmaVersion": 6,
	  "sourceType": "module",
	  "project": ["./tsconfig.json"]
	},
	"overrides": [
	  {
		"files": ["*/.spec.ts"],
		"plugins": ["jest"],
		"rules": {
		  "@typescript-eslint/unbound-method": "off",
		  "jest/unbound-method": "error"
		}
	  }
	],
	"rules": {
	  "no-unused-vars": ["error", { "vars": "local" }],
	  "no-unused-expressions": ["error", { "allowTernary": true }],
	  "no-console": "off",
	  "max-len": ["warn", { "code": 180, "ignoreStrings": true }],
	  "one-var": "off",
	  "import/extensions": "off",
  
	  /* This rule canâ€™t be used with projects that involve AWS Lambda Functions that reference custom code in Lambda Layers.
	  Layer code MUST be imported relative to the root ('/opt/[layer path]'), which is an absolute path. */
	  "import/no-absolute-path": "off",
  
	  "import/prefer-default-export": "off",
	  "import/no-extraneous-dependencies": [
		"error",
		{
		  "devDependencies": [
			"*/.spec.ts",
			"*/test-utils/.ts"
		  ]
		}
	  ],
	  "prettier/prettier": [
		"error",
		{
		  "singleQuote": true,
		  "tabWidth": 4
		}
	  ]
	},
	"settings": {
	  "import/resolver": {
		"node": {
		  "moduleDirectory": ["node_modules", "src/"]
		}
	  }
	}
  }